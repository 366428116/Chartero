{
    "name": "chartero",
    "version": "2.3.0",
    "type": "module",
    "config": {
        "addonName": "Chartero",
        "description": {
            "en": "Charts for Zotero",
            "zh": "可视化文库"
        },
        "addonPref": "extensions.zotero.chartero",
        "issue": "https://github.com/volatile-static/Chartero/issues",
        "gitee": "https://gitee.com/const_volatile/chartero",
        "updateURL": "https://raw.githubusercontent.com/volatile-static/Chartero/main/tools/update.json",
        "addonID": "chartero@volatile.static",
        "defaultSettings": {
            "useDarkTheme": false,
            "enableRealTimeDashboard": true,
            "enableAllImages": true,
            "enableMinimap": true,
            "enableReaderAlert": false,
            "excludedTags": [],
            "maxSummaryItems": 99,
            "lastAuthorSankey": -1,
            "scanPeriod": 1,
            "scanTimeout": 20,
            "completeThreshold": 20
        }
    },
    "description": "Charts for Zotero",
    "scripts": {
        "build": "cross-env NODE_ENV=development ts-node-esm tools/build.ts --full",
        "reload-all": "ts-node-esm tools/build.ts --full",
        "reload-dev": "cross-env NODE_ENV=development ts-node tools/build.ts",
        "replace-update": "ts-node tools/build.ts --no-build",
        "type-check-vue": "vue-tsc --noEmit -p ./src/vue",
        "type-check-bootstrap": "tsc --noEmit -p ./src/bootstrap",
        "type-check-all": "npm run type-check-vue & npm run type-check-bootstrap",
        "release-minor": "release-it minor",
        "release-patch": "release-it patch",
        "preview": "vite preview ./src/vue",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitee.com/const_volatile/chartero.git"
    },
    "author": "volatile static",
    "license": "AGPL-2.0-or-later",
    "bugs": {
        "url": "https://github.com/volatile-static/Chartero/issues"
    },
    "homepage": "https://github.com/volatile-static/Chartero",
    "releasepage": "https://github.com/volatile-static/Chartero/releases/latest/download/chartero.xpi",
    "dependencies": {
        "@highcharts/dashboards": "^1.2.0",
        "animejs": "^3.2.2",
        "compromise": "^14.10.1",
        "compromise-stats": "^0.1.0",
        "highcharts": "^11.2.0",
        "highcharts-vue": "^1.4.3",
        "segmentit": "^2.0.3",
        "tdesign-vue-next": "^1.7.1",
        "zotero-plugin-toolkit": "^2.3.15"
    },
    "devDependencies": {
        "@tsconfig/node18": "^18.2.2",
        "@types/animejs": "^3.1.12",
        "@types/node": "^18.18.6",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.2",
        "@vitejs/plugin-vue": "^4.5.2",
        "@vue/tsconfig": "^0.5.1",
        "compressing": "^1.10.0",
        "cross-env": "^7.0.3",
        "esbuild": "^0.19.10",
        "esbuild-sass-plugin": "^2.16.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.0",
        "lodash": "^4.17.21",
        "pdfjs-dist": "^3.11.174",
        "prettier": "3.1.1",
        "release-it": "^17.0.1",
        "replace-in-file": "^7.0.2",
        "tdesign-icons-vue-next": "^0.2.2",
        "ts-node": "^10.9.2",
        "unplugin-auto-import": "^0.17.2",
        "unplugin-vue-components": "^0.26.0",
        "vite": "^5.0.10",
        "vue": "^3.3.13",
        "vue-tsc": "^1.8.25",
        "zotero-types": "file:../zotero-types"
    },
    "eslintConfig": {
        "extends": [
            "plugin:prettier/recommended"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "release-it": {
        "hooks": {
            "after:bump": "npm run replace-update",
            "before:github:release": "npm run reload-all"
        },
        "github": {
            "release": false,
            "pushRepo": "https://github.com/volatile-static/Chartero.git",
            "assets": [
                "build/*.xpi"
            ]
        },
        "npm": {
            "publish": false
        }
    }
}