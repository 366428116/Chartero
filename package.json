{
    "name": "chartero",
    "config": {
        "addonName": "Chartero",
        "addonPref": "extensions.zotero.chartero",
        "issue": "https://github.com/volatile-static/Chartero/issues",
        "releasepage": "https://github.com/volatile-static/Chartero/releases/latest/download/chartero.xpi",
        "updateURL": "https://raw.githubusercontent.com/volatile-static/Chartero/main/tools/update.json",
        "addonID": "chartero@volatile.static"
    },
    "version": "2.0.0-beta",
    "description": "Charts for Zotero",
    "scripts": {
        "build": "npm run reload-all",
        "build-dev-bootstrap": "cross-env NODE_ENV=development node ./tools/build.mjs",
        "build-dev-vue": "vite build ./src/vue --minify false",
        "build-dev-all": "npm run build-dev-bootstrap && npm run build-dev-vue",
        "build-bootstrap": "cross-env NODE_ENV=production node ./tools/build.mjs",
        "build-vue": "vite build ./src/vue",
        "build-all": "npm run build-bootstrap && npm run build-vue",
        "type-check-vue": "vue-tsc --noEmit -p ./src/vue",
        "type-check-bootstrap": "tsc --noEmit -p ./src/bootstrap",
        "type-check-all": "npm run type-check-vue & npm run type-check-bootstrap",
        "restart": "node ./tools/restart.js",
        "restart-all": "npm run build-dev-all && npm run restart",
        "restart-bootstrap": "npm run build-dev-bootstrap && npm run restart",
        "reload-bootstrap": "npm run build-dev-bootstrap && node tools/reload.mjs",
        "reload-vue": "npm run build-dev-vue && node tools/reload.mjs",
        "reload-all": "npm run build-dev-all && node tools/reload.mjs",
        "pack": "node ./tools/pack.js",
        "build-pack": "npm run build-all && npm run pack",
        "release": "release-it",
        "preview": "vite preview ./src/vue",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitee.com/const_volatile/chartero.git"
    },
    "author": "volatile static",
    "license": "AGPL-2.0-or-later",
    "bugs": {
        "url": "https://github.com/volatile-static/Chartero/issues"
    },
    "homepage": "https://gitee.com/const_volatile/chartero",
    "releasepage": "https://github.com/volatile-static/Chartero/releases/latest/download/chartero.xpi",
    "dependencies": {
        "animejs": "^3.2.1",
        "compromise": "^14.9.0",
        "compromise-stats": "^0.1.0",
        "highcharts": "^11.1.0",
        "highcharts-vue": "^1.4.3",
        "segmentit": "^2.0.3",
        "tdesign-vue-next": "^1.4.2",
        "zotero-plugin-toolkit": "^2.2.5"
    },
    "devDependencies": {
        "@types/animejs": "^3.1.7",
        "@types/node": "^18.17.4",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/tsconfig": "^0.1.3",
        "compressing": "^1.9.1",
        "cross-env": "^7.0.3",
        "esbuild": "^0.15.18",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "pdfjs-dist": "^3.9.179",
        "prettier": "2.8.3",
        "release-it": "^15.11.0",
        "replace-in-file": "^6.3.5",
        "tdesign-icons-vue-next": "^0.1.12",
        "unplugin-auto-import": "^0.12.2",
        "unplugin-vue-components": "^0.22.12",
        "vite": "^4.4.9",
        "vue": "^3.2.45",
        "vue-tsc": "^1.8.8",
        "zotero-types": "^1.2.1"
    },
    "eslintConfig": {
        "extends": [
            "plugin:prettier/recommended"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "arrowParens": "avoid"
    }
}
