{
    "extends": "@vue/tsconfig/tsconfig.node.json",
    "include": [
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "playwright.config.*"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "composite": true,
        "strict": true,
        "preserveValueImports": false,
        "importsNotUsedAsValues": "remove",
        "verbatimModuleSyntax": true,
        "types": [
            "vite/client",
            "node",
            "tdesign-vue-next/global",
            "highcharts-vue/types/highcharts-vue"
        ]
    }
}
